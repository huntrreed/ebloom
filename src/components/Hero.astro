---
import { Image } from "astro:assets";
import heroImage from "../assets/images/ornamentall.jpg"; // Replace with your chosen image
import arrow from "../assets/icons/arrowBlack.png";
---

<section class="relative w-full h-[80vh] flex items-center">
  <!-- Background Image -->
  <div class="absolute inset-0 w-full h-full">
    <Image
      class="w-full h-full object-cover"
      src={heroImage}
      alt="A showcase of handmade Utah art"
    />
    <div class="absolute inset-0 bg-[#3c2f2f]/60"></div> <!-- Darker overlay for contrast -->
  </div>

  <!-- Hero Content (Left-Aligned, Matches Navbar) -->
  <div class="relative z-10 flex flex-col items-start text-left px-6 md:px-16 lg:px-24 w-full max-w-screen-xl mx-auto">
    <h1 class="text-[#c4623e] text-5xl md:text-7xl font-bold drop-shadow-lg">
      Handmade Utah Art.
    </h1>
    <h2 class="text-[#deccb4] text-lg md:text-2xl mt-4 drop-shadow-md">
      Unique wood-burned and painted art, crafted in Utah.
    </h2>

    <!-- Shop Now Button -->
    <a
      class="mt-6 bg-[#deccb4] text-[#3c2f2f] py-3 px-6 rounded-full text-lg font-bold transition duration-300 hover:bg-[#c4623e] shadow-lg"
      href="/shop"
    >
      Shop now
    </a>
  </div>
</section>
