---
import { Image } from "astro:assets";
import heroImage from "../assets/images/ornamentall.jpg"; // Replace with your chosen image
import arrow from "../assets/icons/arrowBlack.png";
---

<section class="relative w-full h-screen">
  <!-- Background Image -->
  <div class="absolute inset-0">
    <Image
      class="w-full h-full object-cover"
      src={heroImage}
      alt="A showcase of handmade Utah art"
    />
    <div class="absolute inset-0 bg-[#eadfcb]/50"></div> <!-- Light overlay for readability -->
  </div>

  <!-- Hero Content -->
  <div class="relative z-10 flex flex-col items-center text-center px-6 lg:px-20">
    <h1 class="text-[#c4623e] text-4xl md:text-6xl font-bold mt-20 lg:mt-32">
      Handmade Utah Art.
    </h1>
    <h2 class="text-[#6b8c65] text-lg md:text-xl mt-4">
      Unique wood-burned and painted art, crafted in Utah.
    </h2>

    <!-- Shop Now Button -->
    <a
      class="mt-6 bg-[#4e3d34] text-white py-3 px-6 rounded-full text-lg font-bold transition duration-300 hover:bg-[#c4623e]"
      href="/shop"
    >
      Shop now
    </a>
  </div>
</section>
