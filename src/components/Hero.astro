---
import { Image } from "astro:assets";
import heroImage from "../../public/images/ornamentall.jpg";
import arrow from "../assets/icons/arrowBlack.png";
---

<section class="relative w-full h-[80vh] flex items-center">
  <!-- Background Image -->
  <div class="absolute inset-0 w-full h-full">
    <Image
      class="w-full h-full object-cover"
      src={heroImage}
      alt="A showcase of handmade Utah art"
    />
    <div class="absolute inset-0 bg-[#3c2f2f]/65"></div> <!-- âœ… Darker overlay for contrast -->
  </div>

  <!-- Hero Content (Left-Aligned, Matches Navbar) -->
  <div class="relative z-10 flex flex-col items-start text-left px-6 md:px-16 lg:px-24 w-full max-w-screen-xl mx-auto">
    <h1 class="text-[#e1a07a] text-5xl md:text-7xl font-bold drop-shadow-lg">
      Handmade Utah Art.
    </h1>
    <h2 class="text-[#e8d6be] text-lg md:text-2xl mt-4 drop-shadow-md">
      Unique wood-burned and painted art, crafted in Utah.
    </h2>

    <!-- Shop Now Button (Larger) -->
    <a
      class="mt-6 bg-[#b77c45] text-white py-4 px-8 rounded-full text-xl font-bold transition duration-300 hover:bg-[#8f5f33] shadow-lg"
      href="/shop"
    >
      Shop now
    </a>
  </div>
</section>
