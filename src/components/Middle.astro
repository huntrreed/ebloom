---
import { Image } from "astro:assets";
import signs from "/images/signsmiddle.jpg";
import ornaments from "/images/ornamentswtag.jpg";
import plant from "/images/customsucc.jpg";
---

<!-- Dark Brown Background Section for Art & Signs -->
<div class="bg-[#4e3d34] py-10">
  <div
    class="flex grid-cols-2 w-full gap-x-4 md:gap-x-6 px-6 mt-4 h-64 md:h-96 lg:h-[400px] items-center justify-center"
  >
    <!-- SIGNS -->
    <a href="/gallery" class="relative w-1/2 h-full group">
      <img
        class="h-full w-full object-cover rounded-l-lg transition-all duration-300 group-hover:brightness-75"
        src="/images/signsmiddle.jpg"
        alt="Handmade custom wood signs"
      />
      <div
        class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300"
      >
        <span class="text-white text-2xl md:text-4xl font-bold">Signs</span>
      </div>
    </a>

    <!-- ART -->
    <a href="/shop" class="relative w-1/2 h-full group">
      <img
        class="h-full w-full object-cover rounded-r-lg transition-all duration-300 group-hover:brightness-75"
        src="/images/ornamentswtag.jpg"
        alt="Handmade custom ornaments"
      />
      <div
        class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300"
      >
        <span class="text-white text-2xl md:text-4xl font-bold">Art</span>
      </div>
    </a>
  </div>
</div>

<!-- Dark Brown Background Section for Custom Commissions -->
<div class="bg-[#4e3d34] py-12">
  <div class="w-full flex items-center justify-center px-6 relative h-64 md:h-96 lg:h-[460px]">
    
    <!-- Text & CTA Section -->
    <div class="absolute inset-y-0 left-4 md:left-10 flex flex-col justify-center w-4/5 md:w-1/3 bg-[#2c1e1e]/80 p-4 rounded-md shadow-lg">
      <!-- Increased Heading Size -->
      <h3 class="text-xl md:text-3xl font-bold font-Quicksand_B text-[#eadfcb]">
        Looking for Something Custom?
      </h3>

      <!-- Increased Paragraph Size -->
      <p class="text-base md:text-lg font-Quicksand_L text-[#eadfcb] mt-2 leading-relaxed">
        Spice up your business or project with one-of-a-kind handmade signs.  
        Letâ€™s chat about creating something unique for your space!
      </p>

      <a
        href="/contact"
        class="mt-4 inline-block bg-[#b77c45] text-white py-2 px-6 rounded-lg text-lg font-semibold hover:bg-[#8f5f33] transition max-w-[150px] mx-auto md:mx-0"
      >
        Get in Touch
      </a>
    </div>

    <!-- Image (No Overlay) -->
    <div class="h-full w-full">
      <img
      class="w-full h-full rounded-lg object-cover"
      src="/images/customsucc.jpg"
      alt="Custom handmade sign"
      />
    </div>
  </div>
</div>
