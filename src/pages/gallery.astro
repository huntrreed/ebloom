---
import Layout from "../layouts/Layout.astro";
import { getGalleryItems } from "../utils/contentful";

const galleryItems = await getGalleryItems();
---

<Layout title="Gallery">
  <div class="gallery-page">
    <h2 class="text-center text-3xl font-bold text-[#deccb4] mt-6 mb-8">Gallery</h2>

    <div class="gallery-grid">
      {galleryItems.map((item) => (
        <div class="gallery-item">
          <img src={item.images[0]} class="gallery-image" />
        </div>
      ))}
    </div>
  </div>
</Layout>

<style>
  /* Fixes navbar overlap */
  .gallery-page {
    background-color: #3c2f2f; /* Corrected dark brown background */
    min-height: 100vh;
    padding: 6rem 2rem 2rem; /* Added top padding to avoid overlap */
    width: 100%;
  }

  /* Full-width gallery */
  .gallery-grid {
    column-count: 3;
    column-gap: 1.5rem;
    margin: 2rem auto;
    max-width: 1440px; /* Matches navbar width */
    padding: 1rem;
  }

  .gallery-item {
    display: inline-block;
    width: 100%;
    margin-bottom: 1.5rem;
    break-inside: avoid;
  }

  .gallery-image {
    width: 100%;
    height: auto;
    object-fit: contain;
    border-radius: 8px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
  }

  /* Responsive Layout */
  @media screen and (max-width: 1024px) {
    .gallery-grid {
      column-count: 2;
    }
  }

  @media screen and (max-width: 600px) {
    .gallery-grid {
      column-count: 1;
    }
  }
</style>
