---
import Layout from "../layouts/Layout.astro";
import { getGalleryItems } from "../utils/contentful";

const galleryItems = await getGalleryItems();
---

<Layout title="Gallery">
  <h2 class="text-center text-3xl font-bold text-[#eadfcb] mt-6 mb-8">Gallery</h2>

  <div class="gallery-grid">
    {galleryItems.map((item) => (
      <div class="gallery-item">
<img src={`https:${item.images[0]}`} class="gallery-image" alt={item.title} />
</div>
    ))}
  </div>
</Layout>

<style>
  .gallery-grid {
    column-count: 3;
    column-gap: 1.5rem;
    margin: 2rem auto;
    max-width: 1200px;
    padding: 1rem;
  }

  .gallery-item {
    display: inline-block;
    width: 100%;
    margin-bottom: 1.5rem;
    break-inside: avoid;
  }

  .gallery-image {
    width: 100%;
    height: auto;
    object-fit: contain;
    border-radius: 8px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
  }

  /* Responsive Layout */
  @media screen and (max-width: 1024px) {
    .gallery-grid {
      column-count: 2;
    }
  }

  @media screen and (max-width: 600px) {
    .gallery-grid {
      column-count: 1;
    }
  }
</style>
